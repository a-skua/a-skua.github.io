---
layout: layouts/main.njk
---

<p class="date">{{ date.toLocaleDateString() }}</p>

<ul class="categories">
  {% for category in categories %}
    <li>{{ category }}</li>
  {% endfor %}
</ul>

<article language="{{ language }}">
  {{ content | safe }}
</article>

<ul class="paginate">
    <li>
      {% set previous = search.previousPage(url, "blog", "date=desc") %}
      &lt;
      {% if previous %}
        <a href="{{ previous.url }}">{{ previous.title }}</a>
      {% endif %}
    </li>
  <li>
    {% set next = search.nextPage(url, "blog", "date=desc") %}
    {% if next %}
      <a href="{{ next.url }}">{{ next.title }}</a>
    {% endif %}
    &gt;
  </li>
</ul>
